<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top"  Content="Get Current Time" FontSize="32"
                Command="{Binding GetCurrentTimeCommand}" Click="Button_Click"
                CommandParameter="Right now ... "/>
        <Label FontSize="32"  Content="{Binding Path=CurrentTime}" />
    </DockPanel>
</Window>
